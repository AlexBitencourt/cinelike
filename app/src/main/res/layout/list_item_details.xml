<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <include layout="@layout/activity_toolbar" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/backdrop_details"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop" />


        <android.support.design.widget.FloatingActionButton
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/button_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:layout_marginRight="16dp"
            app:backgroundTint="@color/colorButtom"
            android:tint="#ffffff"
            android:src="@drawable/ic_favorite_border_black_24dp"
            android:layout_alignTop="@+id/poster_details"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp" />

    <ImageView
        android:id="@+id/poster_details"
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="18dp"/>

    <TextView
        android:id="@+id/title_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginRight="12dp"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="150dp"
        android:textStyle="bold"
        android:textSize="18dp"
        tools:text="Title movie" />

    </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="370dp">

        <TextView
            android:id="@+id/vote_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="22dp"
            android:textColor="@color/colorButtom"
            android:textSize="18dp"
            tools:text="7.8" />

        <TextView
            android:id="@+id/vote_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="22dp"
            android:textColor="#424242"
            android:textSize="16dp"
            android:text="Vote Average" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="135dp">

        <TextView
            android:id="@+id/language_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="22dp"
            android:textAllCaps="true"
            android:textColor="@color/colorButtom"
            android:textSize="18dp"
            tools:text="EN" />

        <TextView
            android:id="@+id/language_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="4dp"
            android:text="Language"
            android:textColor="#424242"
            android:textSize="16dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="260dp">

        <TextView
            android:id="@+id/release_date_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="22dp"
            android:textAllCaps="true"
            android:textColor="@color/colorButtom"
            android:textSize="18dp"
            tools:text="2017" />

        <TextView
            android:id="@+id/ano_filme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="22dp"
            android:textColor="#424242"
            android:textSize="16dp"
            android:text="Release" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="430dp"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingLeft="8dp"
        android:paddingTop="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="12dp"
            android:paddingLeft="8dp"
            android:text="Overview"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/overview_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingLeft="14dp"
            android:paddingRight="18dp"
            android:textColor="@android:color/black" />

    </LinearLayout>

</FrameLayout>
